bash# Environment
NODE_ENV=development

# Development Telegram Bot Configuration
TELEGRAM_BOT_TOKEN_DEV=your_development_bot_token_here
TELEGRAM_BOT_TOKEN_PROD=your_production_bot_token_here
TELEGRAM_BOT_TOKEN_TEST=your_test_bot_token_here

# Legacy support (falls back to DEV if specific env token not found)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Configuration
TELEGRAM_DISABLED=false
TELEGRAM_WEBHOOK_URL_DEV=https://your-dev-domain.ngrok.io
TELEGRAM_WEBHOOK_URL_PROD=https://your-production-domain.com

# Database Configuration (environment-specific paths are handled in code)
DATABASE_PATH=./data/chatcast.db
MESSAGES_DB_PATH=./data/messages.db

# Admin Configuration
ADMIN_KEY=your_admin_key_here

# Server Configuration
PORT=3000

# Logging
LOG_LEVEL=info